# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/wikipedia-summary
MONGODB_TEST_URI=mongodb://localhost:27017/wikipedia-summary-test

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# GitHub AI Configuration (Required)
GITHUB_AI_TOKEN=your-github-ai-token-here
GITHUB_AI_MODEL=gpt-4o
GITHUB_AI_ENDPOINT=https://models.inference.ai.azure.com

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-password

# Redis Configuration (Optional - for advanced caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_SIZE=10m
LOG_FILE_MAX_FILES=5

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@yourdomain.com

# Security Configuration
BCRYPT_ROUNDS=12
ACCOUNT_LOCK_TIME=1800000
MAX_LOGIN_ATTEMPTS=5

# Stripe Configuration (Optional - for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Monitoring Configuration
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# Feature Flags
ENABLE_API_VERSIONING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
